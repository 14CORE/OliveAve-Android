<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:fitsSystemWindows="true"
    tools:context=".SignUpActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/newlogo"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_username"
        android:id="@+id/ic_full_name"
        android:layout_alignTop="@+id/edit_text_username"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/edit_text_username" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textCapWords"
        android:ems="10"
        android:id="@+id/edit_text_username"
        android:hint="Full Name"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="181dp"
        android:layout_toRightOf="@+id/ic_full_name"
        android:layout_toEndOf="@+id/ic_full_name" />

    <ImageView
        android:id="@+id/ic_phone_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edit_text_phone_number"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/edit_text_phone_number"
        android:src="@drawable/ic_phone_black" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/edit_text_phone_number"
        android:hint="Phone Number"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/edit_text_username"
        android:layout_toRightOf="@+id/ic_phone_black"
        android:layout_toEndOf="@+id/ic_phone_black"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/ic_mail_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edit_text_new_email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/edit_text_new_email"
        android:src="@drawable/ic_mail_white" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/edit_text_new_email"
        android:hint="Email"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/edit_text_phone_number"
        android:layout_toRightOf="@+id/ic_mail_white"
        android:layout_toEndOf="@+id/ic_mail_white"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/ic_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edit_text_new_password"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/edit_text_new_password"
        android:src="@drawable/ic_password_white" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/edit_text_new_password"
        android:hint="Password"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/edit_text_new_email"
        android:layout_toRightOf="@+id/ic_password"
        android:layout_toEndOf="@+id/ic_password"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/ic_confirm_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edit_text_reenter_password"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/edit_text_reenter_password"
        android:src="@drawable/ic_password_white" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/edit_text_reenter_password"
        android:hint="Confirm Password"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/edit_text_new_password"
        android:layout_toRightOf="@+id/ic_confirm_password"
        android:layout_toEndOf="@+id/ic_confirm_password"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/ic_login"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:onClick="onSignUpClicked"
        android:src="@drawable/ic_person_add_white"
        android:background="@color/black"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/edit_text_reenter_password"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"  />

</RelativeLayout>