<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_points"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cs246.oliveave.AdminAddPoints">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/welcomeUser" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/userPoints"
        android:layout_above="@+id/addPointsBtn"
        android:layout_below="@+id/welcomeUser"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>

    <Button
        android:text="REDEEM"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="114dp"
        android:id="@+id/redeemBtn"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/addPointsBtn"
        android:layout_alignStart="@+id/addPointsBtn"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:onClick="redeemPointsFromUser"/>

    <Button
        android:text="ADD POINTS"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:id="@+id/addPointsBtn"
        android:layout_above="@+id/redeemBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/green"
        android:textColor="@color/white"
        android:onClick="addPointsToUser"/>

    <Button
        android:text="CANCEL"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="54dp"
        android:id="@+id/cancelPointsBtn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/red"
        android:textColor="@color/white"
        android:onClick="cancelTransaction"/>
</RelativeLayout>