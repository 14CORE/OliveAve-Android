<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <ImageView
        android:id="@+id/rexburg"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:onClick="openRexburgMap"
        android:src="@drawable/rexburg_map"
        android:layout_marginTop="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/idahoFalls"
        android:layout_alignEnd="@+id/idahoFalls" />

    <TextView
        android:id="@+id/text_rexburg"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rexburg"
        android:onClick="openRexburgMap"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/rexburg"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/idahoFalls"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:onClick="openIFMap"
        android:src="@drawable/if_map"
        android:layout_marginTop="65dp"
        android:layout_below="@+id/text_rexburg"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/text_idahoFalls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Idaho Falls"
        android:onClick="openIFMap"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/idahoFalls"
        android:layout_centerHorizontal="true" />

</RelativeLayout>